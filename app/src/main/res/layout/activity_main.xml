<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_above="@+id/btn8"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:background="@android:color/holo_blue_dark"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btnC"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:text="C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/btnDiv"
        android:layout_below="@+id/btn4"
        android:background="@android:color/holo_blue_dark"
        android:text="ร"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnEq"
        android:background="@android:color/holo_blue_dark"
        android:text="รท"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnEq"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btnC"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:text="="
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btnC"
        android:background="@android:color/holo_blue_dark"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:text="3"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn1"
        android:background="@android:color/holo_blue_dark"
        android:text="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn4"
        android:background="@android:color/holo_blue_dark"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/btnMul"
        android:layout_below="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:text="-"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:text="9"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn9"
        android:background="@android:color/holo_blue_dark"
        android:text="+"
        android:textSize="30sp" />

</RelativeLayout>